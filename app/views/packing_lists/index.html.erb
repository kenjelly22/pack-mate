<p>Hello, <%= current_user.name %>!</p>

<% if @packing_lists.any? %>
  <h3>Here are your packing lists:</h3>

  <ul>
    <% @packing_lists.future_dates.each do |packing_list| %>
      <li>
        <%= button_to "❌", packing_list_path(packing_list),
          method: :delete,
          form: { style: "display:inline;" },
          class: "text-red-600" %>
        <%= packing_list.trip_date %> - <%= link_to packing_list.name, packing_list_path(packing_list) %> - <%= packing_list.destination %>

      </li>
    <% end %>
  </ul>

  <h3>Here are your old packing lists:</h3>
  <ul>
    <% @packing_lists.past_dates.each do |packing_list| %>
      <li>
        <%= packing_list.trip_date %> - <%= link_to packing_list.name, packing_list_path(packing_list) %> - <%= packing_list.destination %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Create a new list!", new_packing_list_path %>

<% else %>
  <h3>You don't have any packing lists yet.</h3>

  <%= link_to "Create your first list!", new_packing_list_path %>
<% end %>
